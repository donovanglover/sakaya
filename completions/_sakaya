#compdef sakaya

autoload -U is-at-least

_sakaya() {
    typeset -A opt_args
    typeset -a _arguments_options
    local ret=1

    if is-at-least 5.2; then
        _arguments_options=(-s -S -C)
    else
        _arguments_options=(-s -C)
    fi

    local context curcontext="$curcontext" state line
    _arguments "${_arguments_options[@]}" \
'-a+[Address of the server to request (client only)]:ADDRESS: ' \
'--address=[Address of the server to request (client only)]:ADDRESS: ' \
'-d+[Host directory mounted to /mnt inside the container (client only)]:DIRECTORY:_files' \
'--directory=[Host directory mounted to /mnt inside the container (client only)]:DIRECTORY:_files' \
'-s[Start a server instead of a client]' \
'--server[Start a server instead of a client]' \
'-h[Print help]' \
'--help[Print help]' \
'-V[Print version]' \
'--version[Print version]' \
'::file -- Path to the executable to run:_files' \
&& ret=0
}

(( $+functions[_sakaya_commands] )) ||
_sakaya_commands() {
    local commands; commands=()
    _describe -t commands 'sakaya commands' commands "$@"
}

if [ "$funcstack[1]" = "_sakaya" ]; then
    _sakaya "$@"
else
    compdef _sakaya sakaya
fi
